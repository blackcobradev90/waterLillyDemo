generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:root@localhost:5432/water-lilly"
}


model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  age   Int?
}

// model for UserForm
enum Income {
  LESS_THAN_50K
  BETWEEN_50K_100K
  ABOVE_100K
}

enum Coverage {
  MYSELF
  FAMILY
}

model UserForm {
  id                        Int      @id @default(autoincrement())
  firstName                 String
  lastName                  String
  email                     String   @unique
  address                   String
  phone                     String
  postCode                  String
  gender                    String
  birthday                  DateTime
  expectedIncome            Income
  pregnantOrAdopting        Boolean
  coverage                  Coverage
  tobaccoUser               Boolean
  majorMedicalCondition     Boolean
  createdAt                 DateTime @default(now())
}
